<Window x:Class="plMP3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:plMP3"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <MediaElement Name="mediaElement1"  Grid.Row="0" Grid.Column="0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="play_but" Margin="10" Click="play_but_Click">Play</Button>
            <Button x:Name="pause_but" Margin="10" Click="pause_but_Click">Pause</Button>
            <Button x:Name="choese_but" Margin="10" Click="choese_but_Click">Choose MP3 File</Button>
        </StackPanel>
    </Grid>
</Window>
